<style>
  body{ background: white;}

  h2 {
    font-family: 'Roboto Slab', serif;
    font-weight: 600;
  }

  p {
    font-family: 'Roboto Slab', serif;
    font-weight: 300;
    color: #B3B3B3;
  }

  .answer {
    border: none;
    background-color: transparent;
    outline: none;
    resize: none;
    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;
    width: 100%;

    font-size: 22px;
    font-family: 'Roboto Slab', serif;
  }

  .help-block {
    font-family: 'Roboto Slab', serif;
  }

  .answer-social {
    color: #B3B3B3;
    display: block;
    margin-bottom: 10px;
  }

  .word-counter {
    color: #B3B3B3;
    font-family: 'Roboto Slab', serif;
    font-size: 18px;
  }

  .answer-submit {
    border-color: #A8D9B1;
    border-radius: 4px;
    color: #53AE65;
    font-family: 'Roboto Slab', serif;
    outline: none;
    padding: 10px 16px;
  }

  .answer-submit:hover {
    background-color: white;
    border-color: #53AE65;
    color: #438D52;
    -webkit-transition: border-color 0.5s ease-out,
                        color 0.5s ease-out;
    -moz-transition: border-color 0.5s ease-out,
                     color 0.5s ease-out;
    -o-transition: border-color 0.5s ease-out,
                   color 0.5s ease-out;
    transition: border-color 0.5s ease-out,
                color 0.5s ease-out;
  }
</style>
<script src="http://jquery-elastic.googlecode.com/svn/trunk/jquery.elastic.source.js"></script>
<section class="section new-answer">
  <div class="container-fluid">
    <div class="col-lg-6 col-md-offset-3">
      <p class="text-center">Puedes usar markdown para contestar la pregunta, aprende <a href="https://geekytheory.com/que-es-markdown-y-como-utilizarlo/" target="_blank">aqui</a></p>
      <h2><%= @question.question %></h2>
      <hr/>

      <%= form_for [@question, @answer] do |f| %>

      <h5><span class="word-counter pull-right">Palabras: 0</span></h5>
      <%= f.text_area :answer, class: "answer", rows: "3", autofocus: true, placeholder: "Escribe aquí tu respuesta..." %>
      <div class="form-group">
        <div class="help-block text-center">
        <div class="answer-social">
          ¿Quieres que tu respuesta sea pública?
        </div>
          <%= f.check_box :public_answer , data: { "on-text" => "sí" , "off-text" => "no" , "size" => "mini" }, class: "my-checkbox" %>
        </div>
      </div>
      <div class="text-center">
        <%= f.submit "Publicar Respuesta", class: "btn btn-default answer-submit" %>
      </div>
      <% end %>
      <div>
      </div>
    </div>
  </div>
</section>
<div style="height: 30px"></div>
<%= render 'social_switch' %>
<style>
  div.social-share-button {
    display: inline-block;
  }
</style>

