<style>
.item{
  background: #333;    
  text-align: center;
  height: 550px !important;
}
h2.question-text{
  margin: 0;     
  color: #666;
  padding-top: 10px;
  padding-bottom: 10px;
  font-size: 52px;   
}
/*Properties for div answer-box (answer text)*/
div.answer-box {
  background-color: white;
  height: 73%;
  overflow-y: scroll;
  padding: 0 0 5px 5px;
}
div.carousel-caption {
  padding: 25px 0 0 0;
}
/*Change display property for social share icons*/
div.social-share-button{
  display: inline-block;
}
/*Remove gradient from bootstrap carousel controls*/
.carousel-control.right, .carousel-control.left {
  background-image:none;
}
</style>


<section class="section">
  <div class="row">
    <div class="container">
      <div class="col-lg-12">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="false">
          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            
            <div class="item active">
              <!-- <img src="http://i592.photobucket.com/albums/tt5/Mardini03/h1.jpg" alt="..."> -->
              <h2 class="question-text"><%= @answer.question.question %></h2>
              <div class="answer-box text-left">
                <%= markdown @answer.answer %>
              </div>  
              <div class="carousel-caption">
                <span>Usuario: <%= @answer.user.name %> <%= @answer.user.lastname %></span> /
                <span>Fecha de creación: <%= @answer.created_at.strftime("%d") %> - <%= @answer.created_at.strftime("%b") %> - <%= @answer.created_at.year %></span>
                <!-- Allow to share in social networks only if the answer is public -->
                <% if @answer.public_answer && user_signed_in? %>
                  <% if current_user.id == @answer.user_id %>
                    <span>Comparte en:</span>
                    <%= social_share_button_tag("He respondido una nueva pregunta en 100 preguntas!", url: "https://vibrant-chaise-6979.herokuapp.com/questions/#{@answer.question.id}/answers/#{@answer.id}", :via => "cienpreguntas" ) %>
                  <% end %>
                <% end %>
              </div>
            </div>
            
            <% if @answer.public_answer %>
              <% @answers.each do |answer| %>
                <div class="item">
                  <!-- <img src="http://i592.photobucket.com/albums/tt5/Mardini03/h1.jpg" alt="..."> -->
                  <h2 class="question-text"><%= answer.question.question %></h2>
                  <div class="answer-box text-left">
                    <%= markdown answer.answer %>
                  </div>  
                  <div class="carousel-caption">
                    <span>Usuario: <%= answer.user.name %> <%= answer.user.lastname %></span> /
                    <span>Fecha de creación: <%= answer.created_at.strftime("%d") %> - <%= answer.created_at.strftime("%b") %> - <%= answer.created_at.year %></span>                  
                  </div>
                </div>
              <% end %>
              <!-- Controls -->
              <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            <% end %> 
          </div>
        </div>
          <!-- <a class="btn btn-social-icon btn-facebook"><i class="fa fa-facebook"></i></a>
          		<a class="btn btn-social-icon btn-twitter"><i class="fa fa-twitter"></i></a> -->
      </div>
    </div>
  </div>
</section>

<script>
  var facebookButton = $("a.social-share-button-facebook");
  var twitterButton = $("a.social-share-button-twitter");
  facebookButton.html('<i class="fa fa-facebook"></i>');
  facebookButton.removeClass("social-share-button-facebook");
  facebookButton.addClass("btn btn-social-icon btn-facebook");
  twitterButton.html('<i class="fa fa-twitter"></i>');
  twitterButton.removeClass("social-share-button-twitter");
  twitterButton.addClass("btn btn-social-icon btn-twitter");
</script>
