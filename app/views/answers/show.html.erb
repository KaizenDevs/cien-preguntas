<style>
body{ background: white;}


  h2 {
    font-family: 'Roboto Slab', serif;
    font-weight: 600;
  }

  h3{
    color: #00C166;
    font-family: 'Roboto Slab', serif;
    font-size: 20px;
    font-weight: 100;
    margin-left: 75px;
    strong{ color: #383838}
  }

  p {
    font-family: 'Roboto Slab', serif;
    font-size: 22px;
    font-weight: 300;
  }

  figure img {
    z-index:100;
    position:absolute;
    left:-11px;
    top:-11px;
    clip-path:  polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
    -ms-clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
    -moz-clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
    -webkit-clip-path:  polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
    clip-path: url(#clip);
    width:100px;
    -ms-transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
    transform: rotate(-45deg);
    overflow: hidden;
  }

  .square  {
    margin-left: 20px;
    border: 1px solid #F3F3F3;
    height:80px;
    width:80px;
    -ms-transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    z-index: 100;
    position: relative;
    background: white;

  }

  .right-block{
    top:-80px;
    color: white;
    left: 45px;
    z-index:10;
    width: 90%;
    box-sizing: border-box;
    border-left: 50px solid white;
    border-right: 20px solid white;
    position: relative;
    display: inline-block;
    height:80px;
    border:1px solid #F3F3F3;
 }

.date{
  text-transform: uppercase;
  font-family: 'Roboto', 'Helvetiva Neue', sans-serif;
  background: #181818;
  color: white;
  padding: 8px 5px;
  position: relative;
  bottom: -6px;
}
.day{
  font-weight: bold;
  font-size: 22px;
  line-height: 16px;
}
.month{
  margin-top: 2px;
  font-weight: 200;
  font-size: 14px;
  line-height: 18px;
}
.year{
  line-height: 12px;
  font-weight: 200;
  font-size: 13px;
}
span{
  display:block;
  font-family: 'Roboto Slab', serif;
  text-align: center;
}


/*Properties for div answer-box (answer text)*/
div.answer-box {
  background-color: white;
  height: 73%;
  overflow-y: scroll;
  padding: 0 0 5px 5px;
}
div.carousel-caption {
  padding: 25px 0 0 0;
}
/*Change display property for social share icons*/
div.social-share-button{
  display: inline-block;
}
/*Remove gradient from bootstrap carousel controls*/
.carousel-control.right, .carousel-control.left {
  background-image:none;
}
</style>


<section class="section">
  <div class="row">
    <div class="container-fluid">
      <div class="col-lg-6 col-md-offset-3">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="false">
          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">

            <div class="item active">
              <!-- <img src="http://i592.photobucket.com/albums/tt5/Mardini03/h1.jpg" alt="..."> -->
                  <div class="profile-photo-name" style="height: 100px; margin-top: 10px">
                    <div class="square">
                      <figure>
                       <%= image_tag @answer.user.avatar %>
                       <!-- <svg>
                       <clipPath id="clip">
                       <polygon points="50 0, 100 50, 50 100, 0 50"></polygon>
                       </clipPath>
                     </svg> -->
                   </figure>
                 </div>
                 <div class="right-block">
                  <div class="pull-left">
                    <h3><%= @answer.user.first_name %></h3>

                  </div>

                  <div class="pull-right">
                    <div class="date"><span class="day"><%= @answer.created_at.strftime("%d") %></span><span class="month"><%= @answer.created_at.strftime("%B").first(3) %></span><span class="year"><%= @answer.created_at.strftime("%Y") %></span></div>
                  </div>
                </div>
              </div>
              <h2 class="question-text text-muted"><%= @answer.question.question %></h2>
              <hr>
              <div class="answer-box text-left">
                <p><%= markdown @answer.answer %></p>
              </div>
              <div class="carousel-caption">
              </div>
            </div>

            <% if @answer.public_answer %>
              <% @answers.each do |answer| %>
                <div class="item">
                  <!-- Begin Profile block -->
                      <div class="profile-photo-name" style="height: 100px; margin-top: 10px">
                        <div class="square">
                          <figure>
                           <%= image_tag "profile/profile-test.jpg" %>
                           <!-- <svg>
                           <clipPath id="clip">
                           <polygon points="50 0, 100 50, 50 100, 0 50"></polygon>
                           </clipPath>
                         </svg> -->
                       </figure>
                     </div>
                     <div class="right-block">
                      <div class="pull-left">
                        <h3><%= @answer.user.first_name %></h3>

                      </div>

                      <div class="pull-right">
                        <div class="date"><span class="day"><%= @answer.created_at.strftime("%d") %></span><span class="month"><%= @answer.created_at.strftime("%B").first(3) %></span><span class="year"><%= @answer.created_at.strftime("%Y") %></span></div>
                      </div>
                    </div>
                  </div>
                  <!-- End Profile block -->
                  <h2 class="question-text"><%= answer.question.question %></h2>
                  <div class="answer-box text-left">
                    <%= markdown answer.answer %>
                  </div>
                  <div class="carousel-caption">
                  </div>
                </div>
              <% end %>
              <% if user_signed_in? %>
                <% if @answer_owner_id == current_user.id && @answer.public_answer %>
                  <div style="height: 20px"></div>
                  <span>Comparte en:</span>
                  <div class="text-center">
                    <%= social_share_button_tag("He respondido una nueva pregunta en 100 preguntas!", url: "https://vibrant-chaise-6979.herokuapp.com/answers/#{@answer.id}", :via => "cienpreguntas" ) %>
                  </div>
                <% end %>
                <% if User.find(current_user.id).questions.include?(Question.find(@question_id)) %>
                  <% if @answer_owner_id != current_user.id %>
                    <h2>ya la respondio <%= link_to "ver mi respuesta", answer_path(Answer.where(user_id: current_user.id).first) %></h2>
                  <% end %>
                <% else %>
                  <h2>no la ha respondido</h2>
                <% end %>
              <% end %>
              <!-- Controls -->
              <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            <% end %>
          </div>
        </div>
          <!-- <a class="btn btn-social-icon btn-facebook"><i class="fa fa-facebook"></i></a>
          		<a class="btn btn-social-icon btn-twitter"><i class="fa fa-twitter"></i></a> -->
      </div>
    </div>
  </div>
</section>

<script>
  var facebookButton = $("a.social-share-button-facebook");
  var twitterButton = $("a.social-share-button-twitter");
  facebookButton.html('<i class="fa fa-facebook"></i>');
  facebookButton.removeClass("social-share-button-facebook");
  facebookButton.addClass("btn btn-social-icon btn-facebook");
  twitterButton.html('<i class="fa fa-twitter"></i>');
  twitterButton.removeClass("social-share-button-twitter");
  twitterButton.addClass("btn btn-social-icon btn-twitter");
</script>
