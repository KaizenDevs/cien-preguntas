<!DOCTYPE html>
<html>
<head>
  <title>CienPreguntas</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= render 'layouts/favicons_links' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <%= render 'layouts/nav' %>

  <div class="alerts">
    <% if flash[:alert] %>
      <div class="alertOffset">
          <div class="alert alert-danger text-center" role="alert">
            <%=flash[:alert]%>
            <span class="right-text text-right">X</span>
        </div>
      </div>
    <%end%>

    <% if flash[:notice] %>
      <div class="alertOffset">
          <div class="alert alert-success text-center" role="alert">
            <%=flash[:notice]%>
            <span class="text-right">X</span>
          </div>
      </div>
    <%end%>
  </div>

  <%= yield %>
  <%= render 'layouts/footer' %>
</body>
</html>
<script>
  $(".alert").fadeIn(500).css("opacity","0.85").delay( 6000 ).fadeOut( 1000 );
  $('.alerts').on('click','.alert',function(){ $(this).remove() });
</script>
