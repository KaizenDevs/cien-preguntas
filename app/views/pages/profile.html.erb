<style>

  /*top-container*/

  .user-edit {
    margin: 10px 0;
  }

  .grey {
    color: grey;
  }


  .tdate {
    padding-top: 5px;
    width:10px;
  }

  .table>tbody>tr>td {
    line-height: 18px;
  }

  .date {
    font-size: 22px;
    font-weight: 500;
  }

  .tconcept {
    font-size: 18px;
    font-weight: bold;
  }

  .concept {
    font-size: 16px;
    margin-top: 20px;
  }

  .price {
    font-size: 18px;
  }

  }

  #shadow {
      background-color: #3D668F;
      height: 50px;
      width: 80px;
      -webkit-box-shadow: 0px 10px 5px 0px rgba(244,244,244,1);
      -moz-box-shadow: 0px 10px 5px 0px rgba(244,244,244,1);
      box-shadow: 0px 10px 5px 0px rgba(244,244,244,1);
  }

  .fa-angle-up {
    font-weight: bold;
  }

  .votes {
    font-weight: bold;
    font-size: 16px;
  }
</style>


<div class="container">
  <div class="row">

    <div class="col-xs-12 col-sm-8 col-md-offset-2 .top-container" style="background-color: #F9F9F9; border: 1px solid #E2E2E2; padding: 10px 20px;">
      <div class="col-xs-12 col-sm-4 text-center">
        <figure>
          <img src="http://www.localcrimenews.com/wp-content/uploads/2013/07/default-user-icon-profile.png" alt="" class="img-circle img-responsive" style="width: 80%">
        </figure>
      </div>
      <div class="col-xs-12 col-sm-6">
        <h2 class="text-center" style="color: #D84A33"><%= @user.name + " " %><%= @user.lastname if @user.lastname  %></h2>
        <div class="row">
          <div class="col-xs-12 col-sm-6 text-center">
            <h3 style="margin-bottom: 0"><%= @user.answers.count %></h3>
            <p>Respuestas</p>
          </div>
          <div class="col-xs-12 col-sm-6 text-center">
            <h3 style="margin-bottom: 0">0</h3>
            <p>DÃ­as Consecutivos</p>
          </div>
        </div>
      </div>
    </div>
    <div id="shadow" class="col-xs-12 col-sm-8 col-md-offset-2" style="background-color: #FFFFFF; border: 1px solid #E2E2E2; border-top: 0; padding: 10px 20px; box-shadow: 0px 4px 5px 0px rgba(244,244,244,1);; z-index: 2;">
      <div class="col-xs-6 col-sm-3 text-center">
        <h3 style="background-color: #D84A33; font-size: 15px; padding: 10px 0; margin-top: 10px; color: white; border-radius: 2px"><span class="fa fa-stack-exchange"></span> Respuestas</h3>
      </div>

      <div class="col-xs-6 col-sm-3 pull-right user-edit">
        <div class="btn-group dropup btn-block">
          <button type="button" class="btn btn-primary"><span class="fa fa-gear"></span> Opciones </button>
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
          </button>
          <ul class="dropdown-menu text-left" role="menu">
            <li>
              <%= link_to edit_user_path(current_user) do %>
                Editar Datos
                <span class="fa fa-pencil pull-right"></span>
              <% end %>
            </li>
            <li class="divider"></li>
            <li><%= link_to "<span class='fa fa-warning pull-right'></span> Cancelar cuenta  ".html_safe, registration_path(@user), data: { confirm: "Estas seguro que deseas cancelar tu cuenta?" }, method: :delete %></li>
          </ul>
        </div>
      </div>

    </div>

    <div class="col-xs-12 col-sm-8 col-md-offset-2" style="background-color: #FFFFFF; border: 1px solid #E2E2E2; border-top: 0; padding: 10px 20px; z-index: 1">
      <% @user.answers.each do |answer| %>
      <table class="table" style="margin-top: 10px">
        <tr>
          <td class="tdate grey text-center"><%= answer.created_at.strftime("%b") %> <span class="date"><%= answer.created_at.strftime("%d") %></span></td>
          <td><span class="tconcept grey"><%= answer.question.question %></span><br>
            <p class="concept"><%= answer.answer %></p></td>
        </tr>
      </table>

      <% end %>
    </div>

  </div>
</div>